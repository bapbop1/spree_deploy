<!DOCTYPE html>
<html>
<head>
  <title>Spreeexample</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= yield %>
<script type='text/javascript'>
  (function(d) {
    var scriptTrack = document.createElement('script');
    scriptTrack.src = 'https://assets-dev.monetrack.com/scripts/track.js';
    scriptTrack.async = true;
    document.getElementsByTagName('head')[0].appendChild(scriptTrack);
  })(document);
  $( document ).ready(function() {
    $("a[href*='dev.monetrack.com']").on('click', function(e){
      if(MTCookie.getHttpCookie("current_visitor_id")){
        var urlReload = 'https://dev.monetrack.com/ja?locale=ja&change_language=true' + '&visitor_id=' + MTCookie.getHttpCookie("current_visitor_id") + '&parent_id=' + MTCookie.getHttpCookie("current_parent_id");
        window.open(urlReload, '_blank');
        return false;
      }
    });
  });
</script>

</body>
</html>
